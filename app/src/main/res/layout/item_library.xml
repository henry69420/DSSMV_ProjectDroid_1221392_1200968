<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="16dp"
        app:strokeColor="#E0E0E0"
        app:strokeWidth="1dp"
        app:cardUseCompatPadding="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Nome -->
        <TextView
                android:id="@+id/libraryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library Name"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:textSize="18sp" />

        <!-- Morada -->
        <TextView
                android:id="@+id/libraryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Library Address"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="2dp" />

        <!-- Dias abertos -->
        <TextView
                android:id="@+id/openDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Days"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

        <!-- Horário -->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

            <TextView
                    android:id="@+id/openTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Time"
                    android:textSize="13sp"
                    android:textColor="#4CAF50" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  -  "
                    android:textSize="13sp"
                    android:textColor="#999999" />

            <TextView
                    android:id="@+id/closeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Close Time"
                    android:textSize="13sp"
                    android:textColor="#F44336" />
        </LinearLayout>

        <!-- Botões -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateLibrary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="#2196F3" />

            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDeleteLibrary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#F44336" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
